@import 'nib'

*
  box-sizing border-box

// 00725d

// PRIMARY = #58D2FF
// SECONDARY = #8A0023
// TERTIARY = #2A6DB2
PRIMARY = #58D2FF
SECONDARY = #8A0023
TERTIARY = #00725d

WHITE = #fff
BLACK = #010101

bubble(COLOR)
  color white
  background linear-gradient(top, lighten(COLOR, 30%), COLOR)
  text-shadow 0 -1px 0 rgba(black, .6)
  &:hover, &:focus
    background COLOR
    color lighten(COLOR, 90%)
  &:active
    background COLOR
    box-shadow inset 0 1px 3px rgba(black, .4)

h1, h2
  font-weight 400
.mast
  height 400px
  background url(../img/bg.png) repeat-x top center
  padding-top 6em

  h2, small
    margin-top 1em
    font-weight 200

img
  max-width 100%

.tertiary-banner
  background-color TERTIARY

.white-banner
  background url(../img/whitebg.png) top center

.text-white
  color white

.community-banner
  padding-top 1em
  padding-bottom 1em

.initiative
  padding-top 6em
  padding-bottom 6em
.initiative + .initiative
  padding-top 0em

.logo
  margin-bottom 2em

.mission a
  MID = lighten(TERTIARY, 86%)
  &:link, &:visited
    color MID
  &:hover
    color lighten(MID, 100%)
    text-decoration none
  &:active
    color MID

@media screen and (min-width: 500px)
  .initiative
    padding-top 10em
    padding-bottom 10em
  .initiative + .initiative
    padding-top 0em
  .mast
    height 528px
    padding-top 11em

// -------------------
// page setup
html, body
  height 100%

.wrapper
  min-height 70%
  height auto !important
  margin-bottom 40px

@media screen and (min-width: 768px)
  .banner .lead, .logo
    text-align left

@media (min-width: 1200px)
  .container
    max-width 940px

// shared components
.push
  margin-bottom 20px

.btn-huge
  padding 20px
  font-size 22px

.btn-blue-bubble
  border-color lighten(BLACK, 30%)
  bubble(TERTIARY)

.icons-ul
  margin 0

// nav
.navbar.navbar-default
  border-bottom-color lighten(TERTIARY, 5%)
  box-shadow 0 1px 2px rgba(black, .4)
  background lighten(TERTIARY, 10%)
  z-index 100
  a, li > a
    color WHITE
    &:hover
      color lighten(TERTIARY, 90%)

  li.active > a
    color WHITE
    background-color rgba(WHITE, .3)
    &:hover
      color WHITE
      background-color rgba(WHITE, .5)

  .navbar-toggle
    border-color rgba(WHITE, .4)
    &:hover
      background-color rgba(WHITE, .2)
    .icon-bar
      background-color rgba(WHITE, .6)

.navbar-static-top
  margin-bottom 0

// home jumbotron
.banner
  background url(../img/wall.png) top center
  box-shadow inset 0 -1px 3px rgba(black, .5)
  text-align center
  z-index 1
  padding-top 20px
  padding-bottom 10px

  .logo
    margin-top 10px

  img
    max-width 100%
    margin-bottom 20px
    relative top 0 left -2px

  .lead
    margin-top 10px
    background rgba(BLACK, .5)
    padding 8px 10px 8px 14px
    border-radius 5px
    color WHITE
    text-shadow 0 -1px 0 #000

// flashy meta
.comp-meta
  margin-top 30px

  font-size 1.2em

  > div
    padding-right 40px

  p, address
    max-width 430px

    color lighten(BLACK, 56%)

  i
    relative top 20px left 0
    float left
    width 60px

    margin-right 10px
    margin-bottom 70px

    font-size 60px
    text-align center
    color SECONDARY

@media screen and (min-width: 400px)
  .comp-meta i
    relative top 20px left 0
    float left
    width 90px
    margin-right 20px
    margin-bottom 70px

    font-size 90px
    text-align center
    color SECONDARY

// mission
.mission
  padding 30px 0 50px 0

  color WHITE

  background TERTIARY

  text-shadow 0 -1.5px 0 rgba(black, .6)
  hr
    opacity .6
  ul
    margin 0

    font-size 15px
    font-weight 300

  li
    margin-bottom 10px

@media (min-width: 768px)
  .mission ul
    font-size 20px

// register
.register
  table ul
    margin 0
    padding-left 24px

  .icon-usd
    color #468847
  .icon-ban-circle
    color #b94a48

// schedule
.schedule
  th
    min-width 90px

// footer
.footer
  border-top 5px solid lighten(BLACK, 20%)
  background #333 // url(../img/wall.png)
  text-shadow 0 -1px 0 rgba(black, .5)
  padding 40px 0 60px 0

  color WHITE
  a
    color lighten(saturate(TERTIARY, 60%), 60%)

// for reference --------------------------------------
.declaration-order
  // Positioning
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 100

  // Box-model
  display block
  float right
  width 100px
  height 100px

  // Typography
  font normal 13px "Helvetica Neue", sans-serif
  line-height 1.5
  color #333
  text-align center

  // Visual
  background-color #f5f5f5
  border 1px solid #e5e5e5
  border-radius 3px

  // Misc
  opacity 1